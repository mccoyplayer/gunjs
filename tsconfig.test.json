{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "declaration": false,
    "outDir": "./dist",
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "typings/firebase.d.ts",
    "typings-internal/firebase-internal.d.ts"
  ],
  "exclude": [
    "src/firebase.ts"
  ]
}
